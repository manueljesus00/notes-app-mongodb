<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}" class="fas fa-pen"></a>
                </h4>
                <p>{{description}}</p>
                <button class="btn btn-danger btn-block btn-sm">
                    Eliminar
                </button>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <p class="lead">No hay ninguna nota (todav√≠a...)</p>
            <a href="/notes/add" class="btn btn-success btn-block">Crea una nota!!</a>
        </div>
    </div>
    {{/each}}
</div>